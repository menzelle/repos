@model MenzelleJacobs.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p id="Confirmation" name="Confirmation">@Model.Confirmation</p>

<div class="form-group">
    <form asp-controller="contact" asp-action="ContactForm">
        <div class="form-group">
            <label for="Name">Your Name:    </label>
            <input class="form-control" type="text" asp-for="@Model.Name" />
        </div>
      
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control" type="email" asp-for="@Model.Email" />
        </div>
       
        <div class="form-group">
            <label for="Phone">Phone:</label>
            <input class="form-control" type="tel" asp-for="@Model.Phone" />
        </div>


        <div class="form-group">
            <label for="Hire">Would you like to hire me?</label>
            <input class="form-check-input" type="checkbox" asp-for="@Model.Hire" />
        </div>
        
        <div class="form-group">
            <label for="VisitorMessage">Message:</label>
            <input class="form-control" type="text" name="VisitorMessage" value="" asp-for="@Model.VisitorMessage" />
        </div>
        
        <button type="submit">Send</button>
    </form>
</div>
